<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectFileActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android_custom:flexDirection="column">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:divider="@drawable/title"
            android:orientation="vertical"
            android:showDividers="end">


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:background="@color/colorfocus"
                android:layout_height="49dp">

                <ImageView
                    android:id="@+id/homebackselect"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ico_brawser_backwards_d" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:alignItems="center"
                    app:justifyContent="center"
                    app:layout_flexGrow="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文件下载"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </com.google.android.flexbox.FlexboxLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    />
            </com.google.android.flexbox.FlexboxLayout>


        </LinearLayout>


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        app:alignItems="center"
        app:flexDirection="column"
        app:layout_flexGrow="1">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_file_folder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="请选择需要下载的文件：" />

            <CheckBox
                android:buttonTint="@color/colorfocus"
                android:id="@+id/checkbox_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="全选" />
        </LinearLayout>


        <ListView
            android:id="@+id/lv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_suc"
            app:layout_flexGrow="1" />

        <LinearLayout
            android:id="@+id/llbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/bttest"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="下载"
                android:textColor="#fff" />

            <Button
                android:id="@+id/parent"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="返回上级目录"
                android:textColor="#fff" />

        </LinearLayout>

        <TextView

            android:id="@+id/tv_suc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/llbtn"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:divider="@drawable/title"
            android:orientation="vertical"
            android:showDividers="beginning"
            tools:ignore="MissingConstraints">

            <include
                android:id="@+id/systembar"
                layout="@layout/navbar"></include>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

</android.support.constraint.ConstraintLayout>